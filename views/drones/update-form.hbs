<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1 class="display-5 text-center">Edita el dron</h1>

            <form action="/drones/{{id}}/edit" method="POST" class="mt-5">
                <div class="mb-4">
                    <label for="title" class="form-label">Nuevo modelo</label>
                    <input type="text" class="form-control" id="model" name="name" value="{{name}}">
                </div>
                <div class="mb-4">
                    <label for="description" class="form-label">Nuevo nº de motores</label>
                    <input type="number" class="form-control" id="motores" name="propellers" value="{{propellers}}">
                </div>
                <div class="mb-4">
                    <label for="author" class="form-label">Nueva velocidad máxima</label>
                    <input type="number" class="form-control" id="velocidad" name="maxSpeed" value="{{maxSpeed}}">
                </div>
                <div class="d-flex justify-content-center">
                    <input type="submit" class="btn btn-dark w-50 mt-3" value="Editar">
                </div>
            </form>
        </div>
    </div>